#include <stdio.h>

int main() {
    int n, first = 0, second = 1, next, i;

    printf("Enter the number of terms: ");
    scanf("%d", &n);

    if (n <= 0)
        printf("Please enter a positive number.\n");
    else {
        printf("Fibonacci Series: ");
        for (i = 0; i < n; i++) {
            if (i <= 1)
                next = i;
            else
                next = first + second;

            printf("%d ", next);

            if (i > 0) {
                first = second;
                second = next;
            }
        }
        printf("\n");
    }

    return 0;
}
