#include <stdio.h>

#define SIZE 100

int main() {
    int arr[SIZE], n, choice, pos, value, i;

    printf("Enter the number of elements: ");
    scanf("%d", &n);

    printf("Enter %d elements:\n", n);
    for(i = 0; i < n; i++)
        scanf("%d", &arr[i]);

    while(1) {
        printf("\nArray Operations:\n");
        printf("1. Insert\n");
        printf("2. Delete\n");
        printf("3. Display\n");
        printf("4. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        switch(choice) {
            case 1:
                if(n >= SIZE)
                    printf("Array is full! Cannot insert.\n");
                else {
                    printf("Enter position (1 to %d): ", n + 1);
                    scanf("%d", &pos);
                    printf("Enter value: ");
                    scanf("%d", &value);
                    if(pos < 1 || pos > n + 1)
                        printf("Invalid position!\n");
                    else {
                        for(i = n; i >= pos; i--)
                            arr[i] = arr[i - 1];
                        arr[pos - 1] = value;
                        n++;
                        printf("Element inserted.\n");
                    }
                }
                break;

            case 2:
                if(n <= 0)
                    printf("Array is empty! Cannot delete.\n");
                else {
                    printf("Enter position (1 to %d): ", n);
                    scanf("%d", &pos);
                    if(pos < 1 || pos > n)
                        printf("Invalid position!\n");
                    else {
                        for(i = pos - 1; i < n - 1; i++)
                            arr[i] = arr[i + 1];
                        n--;
                        printf("Element deleted.\n");
                    }
                }
                break;

            case 3:
                if(n <= 0)
                    printf("Array is empty.\n");
                else {
                    printf("Array elements: ");
                    for(i = 0; i < n; i++)
                        printf("%d ", arr[i]);
                    printf("\n");
                }
                break;

            case 4:
                return 0;

            default:
                printf("Invalid choice! Try again.\n");
        }
    }

    return 0;
}
